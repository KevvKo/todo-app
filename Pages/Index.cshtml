@page
@model toDoApp.Pages.ToDos.IndexModel

@{
    ViewData["Title"] = "Personal to Do's";
}

<h1>
    @DateTime.Now.DayOfWeek
</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                To Do's
            </th>
            <th>
                to be done by
            </th>
            <th>
                check
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ToDoItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.creationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isDone)
            </td>
            <td>
                <a asp-page="/ToDos/Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-page="/ToDos/Details" asp-route-id="@item.id">Details</a> |
                <a asp-page="/ToDos/Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="form">
    <form method="post">
        <label>To Do: </label>
        <input>
        <label> Deadline: </label>
        <input type="date">
        <input type="submit" value="Add" class="btn btn-primary" />
    </form>
</div>
<p>
    <div class="addTask" >
        <img src="~/img/add-24px.svg">
    </div>
</p>